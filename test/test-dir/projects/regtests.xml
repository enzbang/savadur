<project>
  <name id="regtests" />
  <description>
    <![CDATA[An in-depth look at creating applications with XML, using <, >,]]>
  </description>
  <scm id="git" />

  <variable id="url" value="../../../../" />

  <action id="make">
    <cmd>make build</cmd>
  </action>

  <action id="regtests">
    <cmd>make regtests</cmd>
  </action>

  <action id="mail">
    <cmd>/hooks/send-mail $project_name $failed_action</cmd>
  </action>

  <action id="jabber">
    <cmd>/hooks/send-xmpp $project_name</cmd>
  </action>

  <scenario id="default" periodic="23:30/+60">
    <scm_action id="version" require_change="true" on_error="quit" />
    <scm_action id="pull" />
    <action id="make" />
    <action id="regtests" />
  </scenario>

  <notifications>
    <on_failure>
      <action id="mail" />
    </on_failure>
    <on_success>
      <action id="jabber" />
    </on_success>
  </notifications>
</project>
