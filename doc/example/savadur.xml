<project>
  <name id="savadur" />
  <scm id="git" />

  <variable id="url" value="git://repo.or.cz/savadur.git" />

  <action id="make">
    <cmd>make build</cmd>
  </action>

  <action id="regtests">
    <cmd>make regtests</cmd>
  </action>

  <scenario id="default">
    <scm_action id="pull" />
    <scm_action id="version" value=".*" require_change="true" on_error="quit" />
    <action id="make" />
    <action id="regtests" />
  </scenario>

</project>
