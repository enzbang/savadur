with Savadur.Config.Project;
with Savadur.Config.SCM;
with Savadur.Jobs;
with Savadur.Web.Server;

procedure Savadur.Server is
begin
   Config.SCM.Parse;
   Config.Project.Parse;

   Web.Server.Start;

   --  Endless loop

   Jobs.Add_Periodic_Scenario;

   loop
      delay Duration'Last;
   end loop;
end Savadur.Server;
